generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StoreSession {
  id      String @id
  shop    String
  payload Json

  upsells     Upsell[]
  billings    Billing[]
  
  @@map("store_session")
}

model Upsell {
  id          Int             @id @default(autoincrement())
  Store       StoreSession    @relation(fields: [storeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  storeId     String
  status      Boolean
  views       Int
  conversion  Int
  priority    Int
  triggers    Json
  content     Json
}

model Billing {
  id          Int      @id @default(autoincrement())
  Store       StoreSession    @relation(fields: [storeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  storeId     String
}

